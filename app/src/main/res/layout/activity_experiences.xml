<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Experiences">

    <TextView
        android:id="@+id/experience"
        android:text="@string/experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/mastImg"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/mast"
        android:layout_marginTop="50dp"
        android:layout_marginStart="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/experience"
        />

    <TextView
        android:id="@+id/txtmast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CargoMast"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/mastImg"
        app:layout_constraintStart_toEndOf="@+id/mastImg"
        app:layout_constraintTop_toTopOf="@+id/mastImg"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"/>

    <TextView
        android:id="@+id/timeMast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TimeMast"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/txtmast"
        app:layout_constraintStart_toEndOf="@+id/mastImg"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"/>

    <TextView
        android:id="@+id/cargoMast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/todo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeMast"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/mantris"
        android:layout_marginTop="50dp"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toBottomOf="@+id/cargoMast"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>